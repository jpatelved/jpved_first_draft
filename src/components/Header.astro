---
import Logo from '../components/Logo.astro';
import AuthButton from '../components/AuthButton';

const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Trade Insights', href: '/trade-insights' },
    { linkText: 'Charts', href: '/charts' },
    { linkText: 'Resources', href: '/resources' }
];
---

<nav class="flex flex-wrap items-center justify-between gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
    <div class="flex flex-wrap items-center gap-4">
        <a href="/">
            <Logo />
        </a>
        {
            !!navItems?.length && (
                <ul class="flex flex-wrap gap-x-4 gap-y-1">
                    {navItems.map((item) => (
                        <li>
                            <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2">
                                {item.linkText}
                            </a>
                        </li>
                    ))}
                </ul>
            )
        }
    </div>
    <div>
        <AuthButton client:load />
    </div>
</nav>
