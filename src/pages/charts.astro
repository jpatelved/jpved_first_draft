---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Charts | JP Analytics">
  <section class="mb-12">
    <h1 class="mb-4 text-4xl font-bold">Technical Charts</h1>
    <p class="text-xl opacity-90 mb-8">
      Browse technical analysis charts and market visualizations.
      Upload and share your own chart analysis.
    </p>
  </section>

  <section class="mb-12">
    <div class="p-6 rounded-lg bg-gradient-to-r from-blue-500/10 to-cyan-500/10 border border-blue-500/20">
      <h3 class="text-lg font-semibold mb-4">Upload Chart</h3>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium mb-2">Chart Image</label>
          <input
            type="file"
            accept="image/*"
            id="chartUpload"
            class="block w-full text-sm file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-semibold file:bg-blue-500 file:text-white hover:file:bg-blue-600 cursor-pointer"
          />
        </div>
        <div>
          <label class="block text-sm font-medium mb-2">Symbol</label>
          <input
            type="text"
            id="chartSymbol"
            placeholder="e.g., AAPL, TSLA"
            class="w-full px-4 py-2 rounded bg-gray-800 border border-gray-700 focus:border-blue-500 focus:outline-none"
          />
        </div>
        <div>
          <label class="block text-sm font-medium mb-2">Notes</label>
          <textarea
            id="chartNotes"
            placeholder="Add analysis notes..."
            rows="3"
            class="w-full px-4 py-2 rounded bg-gray-800 border border-gray-700 focus:border-blue-500 focus:outline-none"
          ></textarea>
        </div>
        <button
          id="uploadBtn"
          class="btn bg-gradient-to-r from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 border-0"
        >
          Upload Chart
        </button>
      </div>
    </div>
  </section>

  <section class="mb-12">
    <h2 class="text-2xl font-bold mb-6">Recent Charts</h2>
    <div id="chartsGrid" class="grid gap-6 md:grid-cols-2">
      <div class="p-6 rounded-lg bg-gray-800/40 border border-gray-700 text-center opacity-70">
        <p>No charts available yet. Upload your first chart above.</p>
      </div>
    </div>
  </section>
</Layout>

<script>
  const uploadBtn = document.getElementById('uploadBtn');
  const chartUpload = document.getElementById('chartUpload') as HTMLInputElement;
  const chartSymbol = document.getElementById('chartSymbol') as HTMLInputElement;
  const chartNotes = document.getElementById('chartNotes') as HTMLTextAreaElement;

  uploadBtn?.addEventListener('click', async () => {
    if (!chartUpload.files || chartUpload.files.length === 0) {
      alert('Please select a chart image');
      return;
    }

    if (!chartSymbol.value) {
      alert('Please enter a symbol');
      return;
    }

    alert('Chart upload functionality coming soon! This will integrate with your storage solution.');
  });
</script>
